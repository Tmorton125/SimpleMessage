%nav
	=link_to :Messages, messages_path


%h3= "New Message"

%hr

= form_for @message,  url: { action: "create"}, html: { class: "standard_form"} do |f|
	%table
		%tr
			%td= f.label :name
			%td= f.text_field :name
		%tr
			%td= f.label :delivery_time
			%td= datetime_field(:message, :delivery_time)
		%tr
			%td= f.label :content
			%td= f.text_area :content, size: "60X12"
		%tr
			%td.button{colspan: 2}= f.submit "Create"